<h1>予定の新規追加</h1>

<%= form_with model: @plan do |f| %>
  <table>
  <tr>
    <th><%= f.label :tilte, "タイトル" %></th>
    <td><%= f.text_field :title %></td>
  </tr>

  <tr>
    <th><%= f.label :start_date, "開始日" %></th>
    <td><%= f.date_select :start_date %></td>
  </tr>

  <tr>
    <th><%= f.label :end_date, "終了日" %></th>
    <td><%= f.date_select :end_date %></td>
  </tr>

  <tr>
    <th><%= f.label :checkbox, "終日の場合はチェックを入れます" %></th>
    <td><%= f.check_box :checkbox, id: :plan_checkbox, :as => :boolean %></td>
  </tr>

  <tr>
    <th><%= f.label :memo, "スケジュールメモ" %></th>
    <td><%= f.text_area :memo %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= f.submit "保存" %></li>
    <li><%= link_to "キャンセル", plans_path %></li>
  </ul>
</div>
<% end %>



  