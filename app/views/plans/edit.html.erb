<p class="fs-1">予定編集</p>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%= form_with model: @plan, local: true do |f| %>
    <%= render 'shared/error_messages' %>
    <p>
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class: 'form-control' %>
    </p>
    
    <p>
    <%= f.label :start_date, "開始日" %>
    <%= f.text_field :start_date, class: 'form-control calendar',  placeholder: '開始日' %>
    </p>

    <p>
    <%= f.label :end_date, "終了日" %>
    <%= f.text_field :end_date, class: 'form-control calendar', placeholder: '終了日' %>
    </p>
    
    <p>
    <%= f.check_box :checkbox, id: :plan_checkbox, :as => :boolean %>
    <%= f.label :checkbox, "終日の場合はチェックを入れます" %>
    </p>

    <p>
    <%= f.label :memo, "スケジュールメモ" %>
    <%= f.text_area :memo, class: 'form-control', rows: '5%' %>
    </p>

  <div>
    <%= f.submit "保存", class: 'btn btn-outline-primary' %>
    <%= link_to "キャンセル", plans_path, class: 'btn btn-outline-secondary' %>
  </div>
  </div>
</div>
<% end %>